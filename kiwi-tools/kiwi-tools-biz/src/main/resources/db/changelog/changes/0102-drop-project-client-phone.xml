<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0102-drop-project-client-phone" author="tools-biz">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="project"/>
                <columnExists tableName="project" columnName="client_phone"/>
            </and>
        </preConditions>

        <dropColumn tableName="project" columnName="client_phone"/>

        <rollback>
            <addColumn tableName="project">
                <column name="client_phone" type="varchar(30)"/>
            </addColumn>
        </rollback>
    </changeSet>
</databaseChangeLog>

