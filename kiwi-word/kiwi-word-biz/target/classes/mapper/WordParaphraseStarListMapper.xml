<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.fengorz.kiwi.word.biz.mapper.WordParaphraseStarListMapper">

    <resultMap id="wordParaphraseStarListDOMap" type="me.fengorz.kiwi.word.api.entity.WordParaphraseStarListDO">
        <id property="id" column="id"/>
        <result property="listName" column="list_name"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
        <result property="owner" column="owner"/>
        <result property="isDel" column="is_del"/>
        <result property="sort" column="sort"/>
    </resultMap>

    <resultMap id="paraphraseStarItemVO" type="me.fengorz.kiwi.word.api.vo.star.ParaphraseStarItemVO">
        <result property="wordId" column="word_id"/>
        <result property="wordName" column="word_name"/>
        <result property="paraphraseId" column="paraphrase_id"/>
        <result property="paraphraseEnglish" column="paraphrase_english"/>
        <result property="meaningChinese" column="meaning_chinese"/>
        <result property="characterId" column="character_id"/>
        <result property="paraphraseEnglishTranslate" column="paraphrase_english_translate"/>
    </resultMap>

    <select id="selectListItems" resultMap="paraphraseStarItemVO">
        select temp.*, wm.word_name
        from (select wp.paraphrase_id,
                     wp.word_id,
                     wp.paraphrase_english,
                     wp.meaning_chinese,
                     wp.character_id,
                     wp.paraphrase_english_translate,
                     wpsr.create_time
              from word_paraphrase_star_rel wpsr
                       left join word_paraphrase wp on wpsr.paraphrase_id = wp.paraphrase_id
              where wpsr.list_id = #{listId}
                and wp.is_del = 'N') temp
                 left join word_main wm on temp.word_id = wm.word_id
        order by temp.create_time desc
    </select>

</mapper>
