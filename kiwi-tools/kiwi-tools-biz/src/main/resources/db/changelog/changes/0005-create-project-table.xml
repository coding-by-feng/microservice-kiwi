<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0001-create-project-table" author="tools-biz">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="project"/>
            </not>
        </preConditions>

        <createTable tableName="project">
            <column name="id" type="varchar(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_code" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="client_name" type="varchar(100)"/>
            <column name="client_phone" type="varchar(30)"/>
            <column name="address" type="varchar(200)"/>
            <column name="sales_person" type="varchar(100)"/>
            <column name="installer" type="varchar(100)"/>
            <column name="team_members" type="text"/>
            <column name="start_date" type="date"/>
            <column name="end_date" type="date"/>
            <column name="status" type="varchar(50)"/>
            <column name="today_task" type="text"/>
            <column name="progress_note" type="text"/>
            <column name="photo_url" type="varchar(512)"/>
            <column name="archived" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="project" columnNames="project_code" constraintName="uk_project_project_code"/>

        <createIndex tableName="project" indexName="idx_project_created_at">
            <column name="created_at"/>
        </createIndex>
        <createIndex tableName="project" indexName="idx_project_start_date">
            <column name="start_date"/>
        </createIndex>
        <createIndex tableName="project" indexName="idx_project_end_date">
            <column name="end_date"/>
        </createIndex>
        <createIndex tableName="project" indexName="idx_project_status">
            <column name="status"/>
        </createIndex>

        <rollback>
            <dropTable tableName="project"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

