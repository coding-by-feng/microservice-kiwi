<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0006-add-project-glass-flags" author="tools-biz">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="project" columnName="glass_ordered"/>
            </not>
        </preConditions>

        <addColumn tableName="project">
            <column name="glass_ordered" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="glass_manufactured" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="project" columnName="glass_manufactured"/>
            <dropColumn tableName="project" columnName="glass_ordered"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

