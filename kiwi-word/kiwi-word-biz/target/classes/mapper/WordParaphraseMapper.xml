<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.fengorz.kiwi.word.biz.mapper.WordParaphraseMapper">

    <resultMap id="wordParaphraseMap" type="me.fengorz.kiwi.word.api.entity.WordParaphraseDO">
        <id property="paraphraseId" column="paraphrase_id"/>
        <result property="wordId" column="word_id"/>
        <result property="characterId" column="character_id"/>
        <result property="paraphraseEnglish" column="paraphrase_english"/>
        <result property="paraphraseEnglishTranslate" column="paraphrase_english_translate"/>
        <result property="meaningchinese" column="meaningChinese"/>
        <result property="translateLanguage" column="translate_language"/>
        <result property="isDel" column="is_del"/>
    </resultMap>

    <resultMap id="wordParaphraseVO" type="me.fengorz.kiwi.word.api.vo.WordParaphraseVO">
        <id property="paraphraseId" column="paraphrase_id"/>
        <result property="paraphraseEnglish" column="paraphrase_english"/>
        <result property="paraphraseEnglishTranslate" column="paraphrase_english_translate"/>
        <result property="meaningchinese" column="meaningChinese"/>
        <result property="translateLanguage" column="translate_language"/>
        <result property="isCollect" column="is_collect"/>
    </resultMap>

    <select id="selectParaphraseAndIsCollect" resultMap="wordParaphraseVO">
        select wp.paraphrase_id,
               wp.paraphrase_english,
               wp.paraphrase_english_translate,
               wp.meaning_chinese,
               wp.translate_language,
               if(temp.collect_id is null, 'N', 'Y') is_collect
        from (select wpsr.paraphrase_id collect_id
              from word_paraphrase_star_rel wpsr
                       left join word_paraphrase_star_list wpsl on wpsr.list_id = wpsl.id
              where wpsl.owner = #{queryParams.owner} and wpsl.is_del='N') temp
                 right join word_paraphrase wp on temp.collect_id = wp.paraphrase_id
        where wp.character_id = #{queryParams.entityId}
          and wp.is_del = 'N'
    </select>

</mapper>
